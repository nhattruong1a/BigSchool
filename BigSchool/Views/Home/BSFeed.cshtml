@model BigSchool.ViewModels.CoursesViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Big School";
    var followings = (List<BigSchool.Models.Following>)ViewBag.Followings;
    var attendings = (List<BigSchool.Models.Attendance>)ViewBag.Attendings;
    var followees = (List<BigSchool.Models.Following>)ViewBag.Followees;
}

<br />
@using (Html.BeginForm("Search", "Home", FormMethod.Post))
{
    <div class="row">
        <div class="col-sm-3">
            <h2>All Courses</h2>
        </div>
    </div><!-- /.row -->
    <div class="row">
        <div class="col-lg-3">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Tìm kiếm..." name="searchStr">
                <span class="input-group-btn">
                    <button class="btn btn-default form-control btn-search" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </span>
            </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
    </div>
}


<div class="row">

    <ul class="course">
        @foreach (var course in Model.UpcomingCourses)
        {
            foreach (var lecturer in followees)
            {
                if (course.LecturerId == lecturer.FolloweeId)
                {
                    <li>
                        <div class="date">
                            <div class="month">
                                @course.DateTime.ToString("MM")
                            </div>
                            <div class="day">
                                @course.DateTime.ToString("dd")
                            </div>
                        </div>
                        <div class="details">
                            <span class="lecturer">
                                @course.Lecturer.Name
                                @if (Model.ShowAction)
                                {
                                    int check = 0;
                                    foreach (var item in followings)
                                    {
                                        if (course.LecturerId == item.FolloweeId && User.Identity.GetUserId() == item.FollowerId)
                                        {
                                            <button data-user-id="@course.LecturerId" class="btn btn-info btn-sm js-toggle-follow following">Following</button>
                                            check = 1;
                                            break;
                                        }
                                    }
                                    if (check == 0)
                                    {
                                        <button data-user-id="@course.LecturerId" class="btn btn-default btn-sm js-toggle-follow">Follow</button>
                                    }
                                }
                            </span>
                            -
                            <span class="category">
                                @course.Category.Name
                                @if (Model.ShowAction)
                                {
                                    int check = 0;
                                    foreach (var item in attendings)
                                    {
                                        if (course.Id == item.CourseId && User.Identity.GetUserId() == item.AttendeeId)
                                        {
                                            <button data-course-id="@course.Id" class="btn btn-info btn-sm js-toggle-attendance going">Going</button>
                                            check = 1;
                                            break;
                                        }
                                    }
                                    if (check == 0)
                                    {
                                        <button data-course-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance">Going?</button>
                                    }
                                }
                            </span>
                            &nbsp;
                            |
                            &nbsp;
                            <a href="@Url.Action("Details", "Home")">Details <i class="glyphicon glyphicon-share-alt"></i></a>
                        </div>
                    </li>
                }
            }
        }
    </ul>
    @section scripts
    {
        <script>
            $(document).ready(function () {
                $(".js-toggle-attendance").click(function (e) {
                    var button = $(e.target);
                    if (button.hasClass("going")) {
                        bootbox.confirm("Are u sure to unattend this course?",
                            function () {
                                $.ajax({
                                    url: "/api/attending/" + button.attr("data-course-id"),
                                    method: "DELETE"
                                })
                                    .done(function () {
                                        button
                                            .removeClass("btn-info going")
                                            .addClass("btn-default")
                                            .text("Going?");
                                    })
                                    .fail(function () {
                                        alert("Sth failed.");
                                    });
                            });
                    }
                    else {
                        $.post("/api/attendances", { courseId: button.attr("data-course-id") })
                            .done(function () {
                                button
                                    .removeClass("btn-default")
                                    .addClass("btn-info going")
                                    .text("Going");
                            })
                            .fail(function () {
                                alert("Sth failed!");
                            });
                    }
                });
                $(".js-toggle-follow").click(function (e) {
                    var button = $(e.target);
                    if (button.hasClass("following")) {
                        bootbox.confirm("Are u sure to unfollow this lecturer?",
                            function () {
                                $.ajax({
                                    url: "/api/following/" + button.attr("data-user-id"),
                                    method: "DELETE"
                                })
                                    .done(function () {
                                        button
                                            .removeClass("btn-info following")
                                            .addClass("btn-default")
                                            .text("Follow");
                                    })
                                    .fail(function () {
                                        alert("Sth failed.");
                                    });
                            });
                    }
                    else {
                        $.post("/api/followings", { followeeId: button.attr("data-user-id") })
                            .done(function () {
                                button
                                    .removeClass("btn-default")
                                    .addClass("btn-info")
                                    .text("Following");
                            })
                            .fail(function () {
                                alert("Sth failed!");
                            });
                    }

                });
            });
        </script>
    }
</div>

